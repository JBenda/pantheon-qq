# Maintainer: Michal Gawronski <dinth1906@gmail.com>

pkgname=dbus-test-runner-bzr
pkgbranch=0.1
pkgver=13
pkgrel=2
pkgdesc="Canonical Ayatana Project"
arch=('i686' 'x86_64')
url="https://launchpad.net/~indicator-applet-developers/dbus-test-runner"
license=('GPL')
depends=('dbus')
makedepends=('libindicator-bzr' 'bzr')
provides=('dbus-test-runner')
conflicts=('dbus-test-runner')
source=('bzr+lp:dbus-test-runner')
md5sums=('SKIP')

_bzrmod=dbus-test-runner

build() {
  cd ${srcdir}/${_bzrmod}
  ./autogen.sh --prefix=/usr || return 1
  make || return 1
}

package() {
  cd ${srcdir}/${_bzrmod}
  make DESTDIR="$pkgdir" install || return 1
}
